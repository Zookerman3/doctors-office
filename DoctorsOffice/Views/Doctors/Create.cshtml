@{
  Layout = "_Layout";
}

@model DoctorsOffice.Models.Doctor

<h2>Add a new doctor</h2>
<hr />

@using (Html.BeginForm())
{
  <div class="form-row">
    <span>@Html.LabelFor(model => model.Name)</span>
    <span>@Html.TextBoxFor(model => model.Name)</span>
  </div>
  <div>
    @foreach(var specialty in ViewBag.Specialties) {
      <input name="AreChecked" type="checkbox" value=@specialty.Name /> @specialty.Name<br />
    }
  </div>
  <button class="green" type="submit">Add New Doctor</button>
}

<a href='@Url.Action("Index")'>
  <button>Back To List</button>
</a>

